#include "stdafx.h"
#include <iostream>
using namespace std;
void main()
{
    int num,c=0,i=1;
	cout<<"ingrese el numero a determinar si es primo: "<<endl;
	cin>>num;
	while(i<=num)
	{

	   if(num%i==0) 
	    { 
			c=c+1;
        }
	   if (c==2)
	   { 
		   cout<<"el numero es primo"<<endl;
	   }
	   else 
	   {
		   cout<<"el numero no es primo"<<endl;	      
       }
	      i=i+1;
	   } 
}
